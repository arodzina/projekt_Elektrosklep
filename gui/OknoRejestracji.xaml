<Window x:Class="gui.OknoRejestracji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
        Title="OknoRejestracji" Height="450" Width="800">
    <Grid>
        <!-- Etykieta dla imienia -->
        <Label Content="Imię:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,51,0,0"/>
        <TextBox Name="txtImie" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="30" Margin="250,81,0,0"/>

        <!-- Etykieta dla nazwiska -->
        <Label Content="Nazwisko:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,121,0,0"/>
        <TextBox Name="txtNazwisko" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="30" Margin="250,151,0,0"/>

        <!-- Etykieta dla e-maila -->
        <Label Content="E-mail:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,181,0,0"/>
        <TextBox Name="txtEmail" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="30" Margin="250,211,0,0"/>

        <!-- Etykieta dla hasła -->
        <Label Content="Hasło:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,241,0,0"/>
        <PasswordBox Name="txtHaslo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="30" Margin="250,271,0,0"/>

        <!-- Przycisk do rejestracji -->
        <Button Content="Zarejestruj się" Name="btnZarejestruj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Margin="250,311,0,0" Click="btnZarejestruj_Click"/>

        <!-- Ewentualny komunikat o błędzie -->
        <Label Name="lblError" Content="" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,350,0,0" Visibility="Hidden"/>
    </Grid>
</Window>
