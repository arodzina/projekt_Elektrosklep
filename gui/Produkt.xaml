<Window x:Class="gui.Produkt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Specyfikacja Produktu" Height="400" Width="500">
    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Specyfikacja Produktu" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBlock Text="Nazwa:" FontWeight="Bold" />
            <TextBlock x:Name="lblNazwa" Margin="0,0,0,10" />
            <TextBlock Text="Cena:" FontWeight="Bold" />
            <TextBlock x:Name="lblCena" Margin="0,0,0,10" />
            <TextBlock Text="Opis:" FontWeight="Bold" />
            <TextBlock x:Name="lblOpis" Margin="0,0,0,10" />
            <TextBlock Text="Procesor:" FontWeight="Bold" />
            <TextBlock x:Name="lblProcesor" Margin="0,0,0,10" />
            <TextBlock Text="RAM:" FontWeight="Bold" />
            <TextBlock x:Name="lblRAM" Margin="0,0,0,10" />
            <TextBlock Text="Dysk:" FontWeight="Bold" />
            <TextBlock x:Name="lblDysk" Margin="0,0,0,10" />
            <TextBlock Text="Karta Graficzna:" FontWeight="Bold" />
            <TextBlock x:Name="lblKartaGraficzna" Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</Window>
