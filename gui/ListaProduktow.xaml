<Window x:Class="gui.ListaProduktow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
        Title="ListaProduktow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblKategoria"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0"/>
        <ListBox Name="listBoxProdukty" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,50,10,0" Height="150"/>
        <Button Name="btnDodajDoKoszyka" Content="Dodaj do koszyka" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,210,0,0" Click="btnDodajDoKoszyka_Click"/>

    </Grid>
</Window>
