<Window x:Class="gui.ListaProduktow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista Produktów" Height="450" Width="800">
    <Grid>
        <!-- Etykieta nagłówka -->
        <Label Name="lblKategoria" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- ListBox do wyświetlania produktów -->
        <ListBox Name="listBoxProdukty" SelectionMode="Multiple" HorizontalAlignment="Center" VerticalAlignment="Top" Width="390" Height="243" Margin="0,80,0,0"/>

        <!-- Przycisk powrotu do menu -->
        <Button Content="Powrót" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,349,0,0" Click="btnPowrot_Click"/>
        <Button x:Name ="BtnDodajKoszyk" Content="Dodaj do koszyka" Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="647,0,0,202" Click="btnDodaj_Click"/>
    </Grid>
</Window>
