<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="gui.ListaProduktow"
        Title="Lista Produktów" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <!-- Etykieta nagłówka -->
        <Label x:Name="lblKategoria" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- ListBox do wyświetlania produktów -->
        <ListBox x:Name="listBoxProdukty" SelectionChanged="listBoxProdukty_SelectionChanged" SelectionMode="Single" HorizontalAlignment="Center" VerticalAlignment="Top" 
         Width="390" 
         Height="243" 
         Margin="0,80,0,0"  
         FontSize="14" 
         FontFamily="Rockwell Nova"
         Background="LightGray"
         BorderBrush="DarkGray" 
         BorderThickness="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Style.Setters>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style.Setters>
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="UIElement.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="LightBlue" Duration="0:0:0.2" 
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="UIElement.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="LightGray" Duration="0:0:0.2" 
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Przycisk powrotu do menu -->
        <Button  Click="btnPowrot_Click" Content="Powrót" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="14" FontFamily="Rockwell Nova" Margin="340,343,340,49" >
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
