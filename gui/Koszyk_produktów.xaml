<Window x:Class="gui.Koszyk_produktów"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
        Title="Koszyk" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Row ="1" Grid.Column="1" Width="500" CornerRadius="10" BorderThickness="5" HorizontalAlignment="Left" Margin="110,0,0,0">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Rectangle Grid.Row="1" Grid.Column="2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.0"/>
                        <GradientStop Color="#f33944" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
        <Label x:Name="LblKoszyk" Content="Koszyk" Grid.Column="1" Grid.Row="1" FontFamily="Rockwell Nova" Foreground="White" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" FontSize="48" Margin="110,0,10,0"/>
        <ListBox x:Name="LstBKoszyk" Grid.Row="3" Grid.Column="1" DisplayMemberPath="Nazwa" SelectionMode="Single"/>
        <Button x:Name="BtnUsunK" Content="Usuń z koszyka" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="14" FontFamily="Rockwell Nova" Grid.Column="2" Grid.Row="3" Margin="0,29,0,0" Height="38" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnWrocK" Content="Kupuj dalej" Click="ClkKupujdalej" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="14" FontFamily="Rockwell Nova" Grid.Column="2" Grid.Row="3" Margin="0,100,0,0" Height="38" VerticalAlignment="Top" HorizontalAlignment="Center" Width="110">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="LblPodsumowanie" Content="Podsumowanie zakupów:" Grid.Column="1" Grid.Row="4" FontSize="25" FontFamily="Rockwell Nova"/>
        <Label x:Name="LblCenaPrzed" Grid.Row="4" Grid.Column="1" Content="Cena przed rabatem:" Margin="360,5,5,70" FontSize="20" FontFamily="Rockwell Nova"/>
        <Label x:Name="LblRabat" Grid.Row="4" Grid.Column="1" Content="Udzielony rabat:" Margin="360,43,5,42" FontSize="20" FontFamily="Rockwell Nova"/>
        <Label x:Name="LblCenaPo" Grid.Row="4" Grid.Column="1" Content="Cena ostateczna:" Margin="360,78,10,7" FontSize="20" FontFamily="Rockwell Nova"/>
        <TextBlock x:Name="TxtCenaPrzed" Grid.Row="3" Grid.Column="2" Height="35" Margin="0,174,0,0" VerticalAlignment="Top" Grid.RowSpan="2" RenderTransformOrigin="0.361,0.595" HorizontalAlignment="Center" Width="110" FontFamily="Rockwell Nova"/>
        <TextBlock x:Name="TxtRabat" Grid.Row="4" Grid.Column="2" Height="35" VerticalAlignment="Center" RenderTransformOrigin="0.361,0.595" HorizontalAlignment="Center" Width="110" FontFamily="Rockwell Nova"/>
        <TextBlock x:Name="TxtCenaPo" Grid.Row="4" Grid.Column="2" Height="35" Margin="0,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.361,0.595" HorizontalAlignment="Center" Width="110" FontFamily="Rockwell Nova"/>
    </Grid>
</Window>
