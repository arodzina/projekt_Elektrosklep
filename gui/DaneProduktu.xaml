<Window x:Class="gui.DaneProduktu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
                Title="DaneProduktu" Height="420" Width="420" MinHeight="370" MinWidth="320" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LblKategoriaProduktu" Content="KATEGORIA" FontFamily="Rockwell Nova" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="LblNazwa" Content="NAZWA" FontFamily="Rockwell Nova" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="LblOpis" Content="OPIS" FontFamily="Rockwell Nova" Grid.Row="7" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="LblCena" Content="CENA" FontFamily="Rockwell Nova" Grid.Row="5" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl1" FontFamily="Rockwell Nova" Grid.Row="9" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl2" FontFamily="Rockwell Nova" Grid.Row="11" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl3" FontFamily="Rockwell Nova" Grid.Row="13" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl4" FontFamily="Rockwell Nova" Grid.Row="15" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <TextBlock x:Name="TxtBKate" FontFamily="Rockwell Nova" Grid.Row="1" Grid.Column="2"/>
        <TextBox x:Name="TxtBNazwa" FontFamily="Rockwell Nova" Grid.Row="3" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtBCena" FontFamily="Rockwell Nova" Grid.Row="5" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtBOpis" FontFamily="Rockwell Nova" Grid.Row="7" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB1" FontFamily="Rockwell Nova" Grid.Row="9" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB2" FontFamily="Rockwell Nova" Grid.Row="11" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB3" FontFamily="Rockwell Nova" Grid.Row="13" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB4" FontFamily="Rockwell Nova" Grid.Row="15" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <Button x:Name="BtnZatwierdz" Content="Zatwierdź" Style="{StaticResource ButtonRound}" Click="Zatwierdz_Click" Grid.Row="17" Grid.Column="0" HorizontalAlignment="Left" Width="140" Foreground="White" FontSize="14" FontFamily="Rockwell Nova" Grid.ColumnSpan="3" Margin="60,0,0,0">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnAnuluj" Click="Anuluj_Click" Content="Anuluj" Style="{StaticResource ButtonRound}" Width="140" Foreground="White" FontFamily="Rockwell Nova" FontSize="14" Grid.Row="17" Grid.Column="2" Margin="60,0,60,0">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
