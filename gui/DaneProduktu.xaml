<Window x:Class="gui.DaneProduktu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
                Title="DaneProduktu" Height="400" Width="320" MinHeight="370" MinWidth="320" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LblKategoriaProduktu" Content="KATEGORIA" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="LblNazwa" Content="NAZWA" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="LblOpis" Content="OPIS" Grid.Row="7" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="LblCena" Content="CENA" Grid.Row="5" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl1"  Grid.Row="9" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl2"  Grid.Row="11" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl3" Grid.Row="13" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <Label x:Name="Lbl4" Grid.Row="15" Grid.Column="0" HorizontalContentAlignment="Right"/>
        <TextBlock x:Name="TxtBKate" Grid.Row="1" Grid.Column="2"/>
        <TextBox x:Name="TxtBNazwa" Grid.Row="3" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtBCena" Grid.Row="5" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtBOpis" Grid.Row="7" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB1" Grid.Row="9" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB2" Grid.Row="11" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB3" Grid.Row="13" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TxtB4" Grid.Row="15" Grid.Column="2" HorizontalContentAlignment="Center"/>
        <Button x:Name="BtnZatwierdz" Content="Zatwierdź" Click="Zatwierdz_Click" Grid.Row="17" Grid.Column="0" HorizontalAlignment="Left" Width="134" Grid.ColumnSpan="3" Margin="10,0,0,0"/>
        <Button x:Name="BtnAnuluj" Click="Anuluj_Click" Content="Anuluj" Grid.Row="17" Grid.Column="2" Margin="49,0,10,0"/>
    </Grid>
</Window>
