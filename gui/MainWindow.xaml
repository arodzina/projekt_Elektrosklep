<Window x:Class="gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="76"/>
            <RowDefinition Height="117"/>
            <RowDefinition Height="116"/>
            <RowDefinition Height="67"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Row ="1" Grid.Column="1" CornerRadius="10" BorderThickness="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Rectangle Grid.Row="1" Grid.Column="1">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.0"/>
                        <GradientStop Color="#f33944" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
        <Label x:Name="LblNazwaSklepu" Grid.Column="1" Grid.Row="1" Content="Witamy w Elektrosklepie!" FontStyle="Italic" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="35" FontFamily="Brush Script MT" Height="100" VerticalAlignment="Center"/>
        <Button x:Name="BtnZaloguj" Content="Zaloguj się" Grid.Column="1" Grid.Row="2" Foreground="White" Style="{StaticResource ButtonRound}" Margin="67,70,67,3" FontSize="20" FontFamily="Rockwell Nova" Click="btnZaloguj_Click">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnRabat" Content="Informacja o rabacie" Grid.Column="1" Grid.Row="3" Foreground="White" Style="{StaticResource ButtonRound}" Margin="67,70,67,4" FontSize="20" FontFamily="Rockwell Nova" Click="btnRabatClick">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnGosc" Content="Kontynuuj jako gość" Grid.Column="1" Grid.Row="3" Foreground="White" Style="{StaticResource ButtonRound}" Margin="67,16,67,58" FontSize="20" FontFamily="Rockwell Nova" Click="btnGosc_Click">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image Grid.Column="2" Grid.Row="3" Source="/assets\laptop_icon.png"  Margin="22,13,20,63" Grid.RowSpan="2"/>
        <Image Grid.Column="1" Grid.Row="2" Source="/assets\smartphone.png"  Height="110" VerticalAlignment="Center" Margin="399,0,-1,0" Grid.ColumnSpan="2"/>
        <Image Grid.Column="0" Grid.Row="3" Margin="-22,13,378,4" Grid.ColumnSpan="2" Source="/assets\tablet.png"/>

        <Image Grid.Row="2" Source="/assets\store.png" Margin="-10,10,390,9" Grid.ColumnSpan="2"/>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <Menu DockPanel.Dock="Left" VerticalAlignment="Top" Width="55" Height="20" >
                <MenuItem Header="Admin" Width="55">
                    <MenuItem Header="Zaloguj" Click="MenuItem_Zaloguj_Click"/>

                    <MenuItem Header="Wyjdz" Click="MenuItem_Wyjdz_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>



    </Grid>

</Window>
