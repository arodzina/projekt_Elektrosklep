<Window x:Class="gui.Kategoria_produktu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="83"/>
            <RowDefinition Height="198"/>
            <RowDefinition Height="89"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="94"/>
            <ColumnDefinition Width="151"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="84"/>
            <ColumnDefinition Width="151"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="149"/>
            <ColumnDefinition Width="96"/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Row ="1" Grid.Column="3" CornerRadius="10" BorderThickness="5" Grid.ColumnSpan="3">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Rectangle Grid.Row="1" Grid.Column="2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.0"/>
                        <GradientStop Color="#f33944" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
        <Label x:Name="LblNazwaSklepu" Grid.Column="3" Grid.Row="1" Content="Elekrosklep" FontStyle="Italic" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="58" FontFamily="Brush Script MT" Grid.ColumnSpan="3" Margin="10,0,10,0"/>
        <Button x:Name="BtnKoszyk" Visibility="Visible" Grid.Column="6" Content="Koszyk" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="20" FontFamily="Rockwell Nova" Click="btnKoszykClick" Margin="136,0,23,4" Grid.ColumnSpan="2">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#f33944" Offset="0.0"/>
                    <GradientStop Color="#ec2075" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnLaptop" Content="Laptopy" Height="30" Grid.Column="1" Grid.Row="3" Foreground="White" Style="{StaticResource ButtonRound}" Margin="21,25,21,34" FontSize="16" FontFamily="Rockwell Nova" Click="ClkLaptop">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnTablet" Content="Tablety" Height="30" Grid.Column="4" Grid.Row="3" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="16" FontFamily="Rockwell Nova" Margin="21,25,21,34" Click="ClkTablet">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnTelefon" Content="Smartfony" Height="30" Grid.Column="6" Grid.Row="3" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="16" FontFamily="Rockwell Nova" Margin="21,25,21,34" Click="ClkSmart" HorizontalAlignment="Center" Width="106">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image Grid.Row="2" Source="\assets\laptop2.png" RenderTransformOrigin="-0.392,0.415" Margin="85,27,29,21" Grid.ColumnSpan="2"/>
        <Image Grid.Column="4" Grid.Row="2" Source="\assets\ipad.png" RenderTransformOrigin="-0.392,0.415" Margin="5,45,14,0" Height="153" VerticalAlignment="Top"/>
        <Image Grid.Column="6" Grid.Row="1" Source="\assets\ikonka_smartfon.png" Margin="0,81,0,87" HorizontalAlignment="Center" Width="108" Grid.RowSpan="3"/>


    </Grid>
</Window>
