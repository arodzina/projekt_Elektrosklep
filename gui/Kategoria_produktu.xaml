<Window x:Class="gui.Kategoria_produktu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Row ="1" Grid.Column="2" Width="450" CornerRadius="10" BorderThickness="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Rectangle Grid.Row="1" Grid.Column="2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.0"/>
                        <GradientStop Color="#f33944" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
        <Label x:Name="LblNazwaSklepu" Grid.Column="2" Grid.Row="1" Content="Elekrosklep" FontStyle="Italic" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="60" FontFamily="Brush Script MT"/>
        <Button x:Name="BtnLaptop" Content="Laptopy" Grid.Column="2" Grid.Row="2" Foreground="White" Style="{StaticResource ButtonRound}" Margin="110,107,303,10" FontSize="14" FontFamily="Rockwell Nova">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnTablet" Content="Tablety" Grid.Column="2" Grid.Row="2" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="14" FontFamily="Rockwell Nova" Margin="303,107,110,10">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnTelefon" Content="Smartfony" Grid.Column="2" Grid.Row="3" Foreground="White" Style="{StaticResource ButtonRound}" FontSize="14" FontFamily="Rockwell Nova" Margin="203.5,107,203.5,10">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.0"/>
                    <GradientStop Color="#f33944" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image Grid.Column="2" Grid.Row="2" Source="assets\ikonka_laptop.jpg" RenderTransformOrigin="-0.392,0.415" Margin="110,14,309,42"/>
        <Image Grid.Column="2" Grid.Row="2" Source="assets\tablet2.jpg" RenderTransformOrigin="-0.392,0.415" Margin="322,0,130,62" Height="50" VerticalAlignment="Bottom"/>
        <Image Grid.Column="2" Grid.Row="3" Source="assets\ikonka_smartfon.jpeg" Margin="214,19,214,37"/>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <Menu DockPanel.Dock="Left" VerticalAlignment="Top" Width="55" Height="20" >
                <MenuItem Header="Admin" Width="55">
                    <MenuItem Header="Zaloguj"/>
                    <MenuItem Header="Zapisz"/>
                    <MenuItem Header="Wyjdz"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>

    </Grid>
</Window>
